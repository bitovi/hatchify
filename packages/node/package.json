{
  "name": "@hatchifyjs/node",
  "version": "1.0.5",
  "description": "Fullstack CRUD Application Solution",
  "main": "./dist/exports.js",
  "types": "./dist/exports.d.ts",
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf tsconfig.tsbuildinfo dist",
    "depcheck": "depcheck .",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:verbose": "jest --watch --verbose",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitovi/hatchify.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitovi/hatchify/issues"
  },
  "homepage": "https://github.com/bitovi/hatchify#readme",
  "dependencies": {
    "@bitovi/sequelize-querystring-parser": "^0.2.9",
    "@hatchifyjs/sequelize-create-with-associations": "^0.6.6",
    "co-body": "^6.1.0",
    "json-api-serializer": "^2.6.6",
    "lodash": "^4.17.21",
    "no-case": "^3.0.4",
    "path-to-regexp": "^6.2.1"
  },
  "devDependencies": {
    "@bitovi/eslint-config": "^1.6.0",
    "@types/co-body": "^6.1.0",
    "@types/jest": "^29.2.1",
    "@types/json-api-serializer": "^2.6.3",
    "@types/lodash": "^4.14.199",
    "@types/node": "^18.16.18",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.2",
    "sqlite3": "^5.1.6",
    "ts-jest": "^29.0.3"
  },
  "peerDependencies": {
    "@hatchifyjs/core": "^0.3.x",
    "sequelize": "6.x"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@bitovi/eslint-config/node",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "ignorePatterns": [
      "dist/*"
    ],
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "warn",
          "curly": "error",
          "import/order": [
            "error",
            {
              "groups": [
                "builtin",
                "external",
                "internal",
                [
                  "sibling",
                  "parent"
                ],
                "index",
                "unknown"
              ],
              "newlines-between": "always",
              "alphabetize": {
                "order": "asc",
                "caseInsensitive": true
              }
            }
          ],
          "one-var": [
            "error",
            "never"
          ],
          "prettier/prettier": [
            "error",
            {
              "bracketSpacing": true,
              "endOfLine": "lf",
              "parser": "typescript",
              "printWidth": 80,
              "semi": false,
              "singleQuote": false,
              "trailingComma": "all",
              "useTabs": false
            }
          ],
          "sort-imports": [
            "error",
            {
              "ignoreCase": false,
              "ignoreDeclarationSort": true,
              "ignoreMemberSort": false,
              "memberSyntaxSortOrder": [
                "none",
                "all",
                "multiple",
                "single"
              ],
              "allowSeparatedGroups": true
            }
          ]
        }
      }
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "coverageReporters": [
      "html",
      "text",
      "text-summary"
    ],
    "setupFilesAfterEnv": [
      "./src/jest.setup.ts"
    ],
    "testEnvironment": "node",
    "transform": {
      ".+\\.ts$": "ts-jest"
    }
  }
}
