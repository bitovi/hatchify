{
  "name": "@hatchifyjs/crypto",
  "version": "1.0.2",
  "description": "Isomorphic WebCrypto package. Only Isomorphic. No Polyfills.",
  "type": "module",
  "exports": "./index.js",
  "types": "./index.d.ts",
  "browser": "./index.browser.js",
  "scripts": {
    "typecheck": "exit 0",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "depcheck": "depcheck .",
    "test": "node --experimental-vm-modules ../../node_modules/.bin/jest --coverage",
    "build": "exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitovi/hatchify.git"
  },
  "keywords": [
    "isomorphic",
    "webcrypto",
    "crypto"
  ],
  "author": "Bitovi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bitovi/hatchify/issues"
  },
  "homepage": "https://github.com/bitovi/hatchify#readme",
  "eslintConfig": {
    "root": true,
    "extends": [
      "@bitovi/eslint-config/node",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "warn",
          "import/order": [
            "error",
            {
              "groups": [
                "builtin",
                "external",
                "internal",
                [
                  "sibling",
                  "parent"
                ],
                "index",
                "unknown"
              ],
              "newlines-between": "always",
              "alphabetize": {
                "order": "asc",
                "caseInsensitive": true
              }
            }
          ],
          "one-var": [
            "error",
            "never"
          ],
          "prettier/prettier": [
            "error",
            {
              "bracketSpacing": true,
              "endOfLine": "lf",
              "parser": "typescript",
              "printWidth": 80,
              "semi": false,
              "singleQuote": false,
              "trailingComma": "all",
              "useTabs": false
            }
          ],
          "sort-imports": [
            "error",
            {
              "ignoreCase": false,
              "ignoreDeclarationSort": true,
              "ignoreMemberSort": false,
              "memberSyntaxSortOrder": [
                "none",
                "all",
                "multiple",
                "single"
              ],
              "allowSeparatedGroups": true
            }
          ]
        }
      }
    ]
  },
  "devDependencies": {
    "@bitovi/eslint-config": "^1.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1"
  }
}
