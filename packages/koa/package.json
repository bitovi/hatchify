{
  "name": "@hatchifyjs/koa",
  "version": "1.3.17",
  "description": "Fullstack CRUD Application Solution",
  "type": "module",
  "exports": "./dist/exports.js",
  "types": "./dist/exports.d.ts",
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf tsconfig.tsbuildinfo dist",
    "depcheck": "depcheck .",
    "test": "node --experimental-vm-modules ../../node_modules/.bin/jest --coverage --runInBand",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "test:watch": "jest --watch --runInBand",
    "test:verbose": "jest --watch --verbose --runInBand",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitovi/hatchify.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitovi/hatchify/issues"
  },
  "homepage": "https://github.com/bitovi/hatchify#readme",
  "dependencies": {
    "@hatchifyjs/node": "^1.3.17",
    "dotenv": "^16.3.1",
    "jsonapi-serializer": "^3.6.7",
    "typedoc": "^0.25.4"
  },
  "devDependencies": {
    "@bitovi/eslint-config": "^1.6.0",
    "@koa/router": "^12.0.0",
    "@types/jest": "^29.2.1",
    "@types/jsonapi-serializer": "^3.6.8",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^20.10.4",
    "@types/supertest": "^2.0.16",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "pg": "^8.11.3",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3"
  },
  "peerDependencies": {
    "@hatchifyjs/core": "^0.3.x",
    "@types/koa": "2.x",
    "koa": "2.x",
    "sequelize": "6.x"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@bitovi/eslint-config/node",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "ignorePatterns": [
      "dist/*"
    ],
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "warn",
          "curly": "error",
          "import/order": [
            "error",
            {
              "groups": [
                "builtin",
                "external",
                "internal",
                [
                  "sibling",
                  "parent"
                ],
                "index",
                "unknown"
              ],
              "newlines-between": "always",
              "alphabetize": {
                "order": "asc",
                "caseInsensitive": true
              }
            }
          ],
          "one-var": [
            "error",
            "never"
          ],
          "prettier/prettier": [
            "error",
            {
              "bracketSpacing": true,
              "endOfLine": "lf",
              "parser": "typescript",
              "printWidth": 80,
              "semi": false,
              "singleQuote": false,
              "trailingComma": "all",
              "useTabs": false
            }
          ],
          "sort-imports": [
            "error",
            {
              "ignoreCase": false,
              "ignoreDeclarationSort": true,
              "ignoreMemberSort": false,
              "memberSyntaxSortOrder": [
                "none",
                "all",
                "multiple",
                "single"
              ],
              "allowSeparatedGroups": true
            }
          ]
        }
      }
    ]
  }
}
