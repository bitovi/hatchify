{
  "name": "@hatchifyjs/koa",
  "private": true,
  "version": "0.0.0",
  "description": "Fullstack CRUD Application Solution",
  "main": "./dist/koa.js",
  "types": "./dist/koa.d.ts",
  "exports": {
    ".": {
      "require": "./dist/koa.js",
      "types": "./src/koa.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepublish": "npm run build",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf tsconfig.tsbuildinfo dist",
    "depcheck": "depcheck .",
    "test": "jest --coverage",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "test:watch": "jest --watch",
    "test:verbose": "jest --watch --verbose",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitovi/hatchify.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitovi/hatchify/issues"
  },
  "homepage": "https://github.com/bitovi/hatchify#readme",
  "dependencies": {
    "@hatchifyjs/node": "^0.0.0",
    "co-body": "^6.1.0",
    "jsonapi-serializer": "^3.6.7",
    "typedoc": "^0.23.21"
  },
  "devDependencies": {
    "@bitovi/eslint-config": "^1.6.0",
    "@koa/router": "^12.0.0",
    "@types/chance": "^1.1.3",
    "@types/co-body": "^6.1.0",
    "@types/jest": "^29.2.1",
    "@types/json-api-serializer": "^2.6.3",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "chance": "^1.1.11",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.2",
    "json-api-serializer": "^2.6.6",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3"
  },
  "peerDependencies": {
    "@types/koa": "2.x",
    "koa": "2.x"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@bitovi/eslint-config/node",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "ignorePatterns": [
      "dist/*"
    ],
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "warn",
          "import/order": [
            "error",
            {
              "groups": [
                "builtin",
                "external",
                "internal",
                [
                  "sibling",
                  "parent"
                ],
                "index",
                "unknown"
              ],
              "newlines-between": "always",
              "alphabetize": {
                "order": "asc",
                "caseInsensitive": true
              }
            }
          ],
          "prettier/prettier": [
            "error",
            {
              "bracketSpacing": true,
              "endOfLine": "lf",
              "parser": "typescript",
              "printWidth": 80,
              "semi": false,
              "singleQuote": false,
              "trailingComma": "all",
              "useTabs": false
            }
          ],
          "sort-imports": [
            "error",
            {
              "ignoreCase": false,
              "ignoreDeclarationSort": true,
              "ignoreMemberSort": false,
              "memberSyntaxSortOrder": [
                "none",
                "all",
                "multiple",
                "single"
              ],
              "allowSeparatedGroups": true
            }
          ]
        }
      }
    ]
  }
}