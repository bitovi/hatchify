{
  "name": "@hatchifyjs/koa",
  "version": "1.0.0",
  "description": "Fullstack CRUD Application Solution",
  "main": "./dist/exports.js",
  "types": "./dist/exports.d.ts",
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf tsconfig.tsbuildinfo dist",
    "depcheck": "depcheck .",
    "test": "jest --coverage --runInBand",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "test:watch": "jest --watch --runInBand",
    "test:verbose": "jest --watch --verbose --runInBand",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitovi/hatchify.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitovi/hatchify/issues"
  },
  "homepage": "https://github.com/bitovi/hatchify#readme",
  "dependencies": {
    "@hatchifyjs/core": "^0.2.0",
    "@hatchifyjs/node": "^1.0.1",
    "dotenv": "^16.3.1",
    "jsonapi-serializer": "^3.6.7",
    "typedoc": "^0.23.21"
  },
  "devDependencies": {
    "@bitovi/eslint-config": "^1.6.0",
    "@koa/router": "^12.0.0",
    "@types/jest": "^29.2.1",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.2",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3"
  },
  "peerDependencies": {
    "@types/koa": "2.x",
    "koa": "2.x",
    "sequelize": "6.x"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@bitovi/eslint-config/node",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "ignorePatterns": [
      "dist/*"
    ],
    "overrides": [
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "warn",
          "curly": "error",
          "import/order": [
            "error",
            {
              "groups": [
                "builtin",
                "external",
                "internal",
                [
                  "sibling",
                  "parent"
                ],
                "index",
                "unknown"
              ],
              "newlines-between": "always",
              "alphabetize": {
                "order": "asc",
                "caseInsensitive": true
              }
            }
          ],
          "one-var": [
            "error",
            "never"
          ],
          "prettier/prettier": [
            "error",
            {
              "bracketSpacing": true,
              "endOfLine": "lf",
              "parser": "typescript",
              "printWidth": 80,
              "semi": false,
              "singleQuote": false,
              "trailingComma": "all",
              "useTabs": false
            }
          ],
          "sort-imports": [
            "error",
            {
              "ignoreCase": false,
              "ignoreDeclarationSort": true,
              "ignoreMemberSort": false,
              "memberSyntaxSortOrder": [
                "none",
                "all",
                "multiple",
                "single"
              ],
              "allowSeparatedGroups": true
            }
          ]
        }
      }
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "coverageReporters": [
      "html",
      "text",
      "text-summary"
    ],
    "testEnvironment": "node",
    "transform": {
      ".+\\.ts$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/src/testing"
    ],
    "moduleNameMapper": {
      "@hatchifyjs/node": "<rootDir>/../node/src/exports.ts"
    }
  }
}
