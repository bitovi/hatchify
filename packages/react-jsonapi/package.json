{
  "name": "@hatchifyjs/react-jsonapi",
  "version": "0.1.35",
  "type": "module",
  "exports": "./dist/react-jsonapi.js",
  "types": "./dist/react-jsonapi.d.ts",
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "depcheck": "depcheck .",
    "test": "vitest run",
    "test:dev": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf tsconfig.tsbuildinfo dist",
    "build": "tsc"
  },
  "dependencies": {
    "@hatchifyjs/react-rest": "^0.1.29",
    "@hatchifyjs/rest-client": "^0.1.21",
    "@hatchifyjs/rest-client-jsonapi": "^0.1.33"
  },
  "peerDependencies": {
    "@hatchifyjs/core": "^0.3.x"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "vitest": "^0.30.1"
  },
  "keywords": [
    "react",
    "jsonapi",
    "react-jsonapi"
  ],
  "eslintConfig": {
    "root": true,
    "extends": [
      "@bitovi/eslint-config/react",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "overrides": [
      {
        "files": [
          "*.js"
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "warn",
          "import/order": [
            "error",
            {
              "groups": [
                "builtin",
                "external",
                "internal",
                [
                  "sibling",
                  "parent"
                ],
                "index",
                "unknown"
              ],
              "newlines-between": "always",
              "alphabetize": {
                "order": "asc",
                "caseInsensitive": true
              }
            }
          ],
          "one-var": [
            "error",
            "never"
          ],
          "prettier/prettier": [
            "error",
            {
              "bracketSpacing": true,
              "endOfLine": "lf",
              "parser": "typescript",
              "printWidth": 80,
              "semi": false,
              "singleQuote": false,
              "trailingComma": "all",
              "useTabs": false
            }
          ],
          "sort-imports": [
            "error",
            {
              "ignoreCase": false,
              "ignoreDeclarationSort": true,
              "ignoreMemberSort": false,
              "memberSyntaxSortOrder": [
                "none",
                "all",
                "multiple",
                "single"
              ],
              "allowSeparatedGroups": true
            }
          ]
        }
      }
    ]
  }
}
