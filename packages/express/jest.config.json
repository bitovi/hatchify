{
  "collectCoverageFrom": ["<rootDir>/src/**/*.ts"],
  "coverageDirectory": "../../coverage/express",
  "coverageReporters": ["html", "text", "text-summary"],
  "coverageThreshold": {
    "global": {
      "branches": 78,
      "functions": 75,
      "lines": 87,
      "statements": 84
    }
  },
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "modulePathIgnorePatterns": ["<rootDir>/src/testing"],
  "roots": ["<rootDir>/src"],
  "testEnvironment": "node",
  "transform": {
    ".+\\.ts$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  }
}
